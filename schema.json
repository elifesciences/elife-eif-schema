{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "eLife Article Version",
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "impact-statement": {
      "type": "string"
    },
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "doi": {
      "$ref": "#/definitions/doi"
    },
    "publish": {
      "type": "boolean",
      "default": false
    },
    "volume": {
      "type": "integer",
      "minimum": 1
    },
    "elocation-id": {
      "type": "string",
      "pattern": "^e[0-9]{5,}$"
    },
    "article-id": {
      "type": "string"
    },
    "article-version-id": {
      "type": "string"
    },
    "pub-date": {
      "type": "string",
      "format": "date-time"
    },
    "update": {
      "type": "string",
      "format": "date-time"
    },
    "path": {
      "$ref": "#/definitions/path"
    },
    "article-type": {
      "enum": [
        "research-article",
        "article-commentary",
        "editorial",
        "book-review",
        "discussion",
        "correction"
      ]
    },
    "status": {
      "enum": [
        "POA",
        "VOR"
      ]
    },
    "force": {
      "type": "boolean",
      "default": false
    },
    "categories": {
      "type": "object",
      "properties": {
        "sub-display-channel": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "display-channel": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "heading": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "keywords": {
      "type": "object",
      "properties": {
        "author-keywords": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "research-organism": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "related-articles": {
      "type": "array",
      "TODO": "not working?",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "enum": [
              "article-reference",
              "commentary",
              "commentary-article",
              "corrected-article"
            ]
          },
          "href": {
            "type": "string"
          },
          "additionalProperties": false,
          "required": [
            "type",
            "href"
          ]
        }
      }
    },
    "contributors": {
      "type": "array",
      "items": {"$ref": "#/definitions/contributor"}
    },
    "referenced": {
      "type": "object",
      "properties": {
        "equal-contrib": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "email": {
          "type": "object",
          "additionalProperties": {
            "oneOf": [
              {
                "type": "string",
                "format": "email"
              },
              {
                "enum": [""],
                "TODO": "caused by phone number in 2833"
              }
            ]
          }
        },
        "funding": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "TODO": "not working?",
            "items": {
              "oneOf": [
                {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "id-type": {
                      "enum": ["FundRef"]
                    },
                    "institution": {
                      "type": "string"
                    },
                    "institution-type": {
                      "enum": ["university"]
                    },
                    "award-id": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false,
                  "required": [
                    "id",
                    "id-type",
                    "institution",
                    "institution-type"
                  ]
                },
                {
                  "type": "object",
                  "properties": {
                    "institution": {
                      "type": "string"
                    },
                    "institution-type": {
                      "enum": ["university"]
                    }
                  },
                  "additionalProperties": false,
                  "required": [
                    "institution",
                    "institution-type"
                  ]
                }
              ]
            }
          }
        },
        "competing-interest": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "contribution": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "present-address": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "affiliation": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/affiliation"
          }
        },
        "related-object": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "TODO": "what is this?"
          }
        },
        "foot-note": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string"
              },
              "value": {
                "type": "string"
              }
            }
          }
        }
      },
      "additionalProperties": false
    },
    "fragments": {
      "type": "array",
      "items": {"$ref": "#/definitions/fragment"}
    },
    "citations": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "authors": {
            "type": "array",
            "items": {
              "oneOf": [
                {
                  "type": "object",
                  "properties": {
                    "group-type": {
                      "type": "string"
                    },
                    "surname": {
                      "type": "string"
                    },
                    "given-names": {
                      "type": "string"
                    },
                    "suffix": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false,
                  "required": [
                    "group-type",
                    "surname"
                  ]
                },
                {
                  "type": "object",
                  "properties": {
                    "group-type": {
                      "type": "string"
                    },
                    "collab": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false,
                  "required": [
                    "group-type",
                    "collab"
                  ]
                }
              ]
            }
          },
          "year": {
            "type": "string",
            "pattern": "^([0-9]{4}[a-z]*)|([0-9]{4}â€“[0-9]{4})|in press|In press$",
            "TODO": "allow all these variants?"
          },
          "title": {
            "type": "string"
          },
          "source": {
            "type": "string"
          },
          "doi": {
            "$ref": "#/definitions/doi"
          },
          "comment": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false,
  "required": [
    "title",
    "version",
    "doi",
    "volume",
    "elocation-id",
    "article-id",
    "article-version-id",
    "path",
    "article-type",
    "status"
  ],
  "definitions": {
    "affiliation": {
      "type": "object",
      "properties": {
        "dept": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "institution": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "city": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "country": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "email": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "null"
            }
          ]
        },
        "TODO": "these shouldn't be present instead of null?"
      },
      "additionalProperties": false,
      "anyOf": [
        {"required": ["dept"]},
        {"required": ["institution"]},
        {"required": ["city"]},
        {"required": ["country"]},
        {"required": ["email"]}
      ]
    },
    "contributor": {
      "oneOf": [
        {
          "type": "object",
          "properties": {
            "type": {
              "enum": [
                "author",
                "author non-byline",
                "editor",
                "reviewer"
              ]
            },
            "equal-contrib": {
              "type": "boolean",
              "default": false
            },
            "corresp": {
              "type": "boolean",
              "default": false
            },
            "id": {
              "type": "string"
            },
            "group-author-key": {
              "type": "string"
            },
            "deceased": {
              "type": "boolean",
              "default": false
            },
            "surname": {
              "type": "string"
            },
            "given-names": {
              "type": "string"
            },
            "suffix": {
              "type": "string"
            },
            "orcid": {
              "type": "string",
              "format": "uri",
              "pattern": "^http://orcid.org/"
            },
            "role": {
              "type": "string"
            },
            "email": {
              "type": "string"
            },
            "affiliations": {
              "type": "array",
              "items": {"$ref": "#/definitions/affiliation"}
            },
            "references": {
              "type": "object",
              "properties": {
                "equal-contrib": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "email": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "funding": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "competing-interest": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "contribution": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "present-address": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "affiliation": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "related-object": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "foot-note": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false,
          "required": [
            "type",
            "surname"
          ]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "enum": [
                "author"
              ]
            },
            "corresp": {
              "type": "boolean",
              "default": false
            },
            "id": {
              "type": "string"
            },
            "group-author-key": {
              "type": "string"
            },
            "collab": {
              "type": "string"
            },
            "affiliations": {
              "type": "array",
              "items": {"$ref": "#/definitions/affiliation"}
            },
            "references": {
              "type": "object",
              "properties": {
                "equal-contrib": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "default": []
                },
                "email": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "default": []
                },
                "funding": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "default": []
                },
                "competing-interest": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "default": []
                },
                "contribution": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "default": []
                },
                "present-address": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "default": []
                },
                "affiliation": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "default": []
                },
                "related-object": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "default": []
                },
                "foot-note": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "default": []
                }
              }
            }
          },
          "additionalProperties": false,
          "required": [
            "type"
          ]
        },
        {
          "type": "object",
          "properties": {
            "type": {
              "enum": [
                "on-behalf-of"
              ]
            },
            "on-behalf-of": {
              "type": "string"
            }
          },
          "additionalProperties": false,
          "required": [
            "type",
            "on-behalf-of"
          ]
        }
      ]
    },
    "doi": {
      "type": "string",
      "pattern": "^(10[.][0-9]{4,}[^\\s\"/<>]*/[^\\s\"]+)$"
    },
    "fragment": {
      "type": "object",
      "oneOf": [
        {
          "properties": {
            "type": {
              "enum": [
                "abstract"
              ]
            },
            "title": {
              "type": "string"
            },
            "doi": {
              "$ref": "#/definitions/doi"
            },
            "path": {
              "$ref": "#/definitions/path"
            },
            "fragments": {
              "type": "array",
              "items": {"$ref": "#/definitions/fragment"}
            }
          },
          "additionalProperties": false,
          "required": [
            "type",
            "doi",
            "path"
          ]
        },
        {
          "properties": {
            "type": {
              "enum": [
                "boxed-text",
                "fig",
                "media",
                "supplementary-material",
                "table-wrap"
              ]
            },
            "title": {
              "type": "string"
            },
            "doi": {
              "$ref": "#/definitions/doi"
            },
            "path": {
              "$ref": "#/definitions/path"
            },
            "fragments": {
              "type": "array",
              "items": {"$ref": "#/definitions/fragment"}
            }
          },
          "additionalProperties": false,
          "required": [
            "type",
            "title",
            "doi",
            "path"
          ]
        },
        {
          "properties": {
            "type": {
              "enum": [
                "sub-article"
              ]
            },
            "title": {
              "type": "string"
            },
            "doi": {
              "$ref": "#/definitions/doi"
            },
            "path": {
              "$ref": "#/definitions/path"
            },
            "fragments": {
              "type": "array",
              "items": {"$ref": "#/definitions/fragment"}
            },
            "contributors": {
              "type": "array",
              "items": {"$ref": "#/definitions/contributor"}
            }
          },
          "additionalProperties": false,
          "required": [
            "type",
            "title",
            "doi",
            "path"
          ]
        }
      ]
    },
    "path": {
      "type": "string",
      "pattern": "^(?![^\\:]+\\:\/\/)([^\/]+\/?)+$"
    }
  }
}
